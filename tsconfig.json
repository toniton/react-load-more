{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "baseUrl": ".",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ]
    },
    "include": [
        "src/**/*", "./index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "typeRoots": [
      ".",
      "node_modules/@types"
    ]
}